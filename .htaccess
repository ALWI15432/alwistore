RewriteEngine On

# Hilangkan .html dari URL (misalnya /produk jadi produk.html)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [L]

# Redirect /produk.html ke /produk (SEO Friendly)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/produk\.html\sHTTP/
RewriteRule ^produk\.html$ /produk [R=301,L]

# (Opsional) Redirect index.html ke root /
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/index\.html\sHTTP/
RewriteRule ^index\.html$ / [R=301,L]

# Blokir akses langsung ke .htaccess
<Files .htaccess>
  Order Allow,Deny
  Deny from all
</Files>
